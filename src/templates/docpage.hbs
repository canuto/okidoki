{{#extend "layout"}}
{{#content "main"}}  
    <div class="breadcrumbs text-sm pl-4 mt-6 lg:mt-6">
      <ul>
        <li><a href="/">Home</a></li>
        {{#each breadcrumbs}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  <!-- hack to make tables look good -->
  <div class="prose dark:prose-invert !max-w-[920px] p-2 lg:m-2 prose-td:[&[align=right]]:text-right prose-td:[&[align=center]]:text-center prose-th:[&[align=right]]:text-right prose-th:[&[align=center]]:text-center">
    {{{html}}}    
  </div>
{{/content}}
{{/extend}}