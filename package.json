{
  "name": "okidoki",
  "version": "1.0.1",
  "bin": {
    "okidoki": "src/index.js"
  },
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "npx tailwindcss -i ./src/templates/input.css -o ./assets/mystyles.css",
    "bundle": "esbuild ./src/clientscript.js --bundle --outfile=./assets/mybundle.js",
    "build": "npm run bundle && node src/index.js generate",
    "generate": "node src/index.js generate",
    "start": "npx serve assets",
    "dev": "nodemon -w ./docs -e md,png,jpg,jpeg,gif,svg,webp --exec \"npm run generate\"",
    "dev:serve": "npm run generate && concurrently \"nodemon -w ./docs -e md,png,jpg,jpeg,gif,svg,webp --exec 'npm run generate'\" \"npx serve dist\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbeejones/okidoki.git"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "okidoki",
    "documentation",
    "markdown",
    "lunr",
    "search",
    "documentation generator",
    "static site generator",
    "open-source",
    "free",
    "api-docs",
    "technical-docs"
  ],
  "author": "",
  "license": "MIT",
  "description": "Free, open-source static site generator for beautiful API and technical documentation from markdown",
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.1",
    "daisyui": "^4.12.24",
    "handlebars": "^4.7.8",
    "handlebars-layouts": "^3.1.4",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "lunr": "^2.3.9",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-container": "^4.0.0",
    "marked-highlight": "^2.2.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^9.1.0",
    "esbuild": "^0.25.1",
    "nodemon": "^3.1.4",
    "tailwindcss": "^3.4.17"
  },
  "files": [
    "src/",
    "assets/",
    "README.md",
    "LICENSE",
    "tailwind.config.js"
  ]
}
